# Server Configuration
PORT=5000

# ⚠️ SECURITY WARNING ⚠️
# SESSION_SECRET must be a long, random string in production
# NEVER commit the actual secret to version control
# You can generate a secure secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=replace-with-secure-secret-in-production

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mvp
POSTGRES_USER=youruser
POSTGRES_PASSWORD=yourpassword
POSTGRES_VOLUME_NAME=postgres_data

# Redis Configuration
# For session store and rate limiting
REDIS_HOST=localhost
REDIS_PORT=6379

# Google Calendar Integration (Optional)
# Required only if you want to enable appointment scheduling
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Node Environment
NODE_ENV=development