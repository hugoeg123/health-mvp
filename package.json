{
  "name": "health-mvp",
  "version": "1.0.0",
  "description": "Health MVP Project",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugoeg123/health-mvp.git"
  },
  "author": "Hugo Garioli",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "reset": "rimraf node_modules && rimraf client/node_modules && rimraf server/node_modules",
    "setup": "npm install && npm run setup:client && npm run setup:server",
    "setup:client": "npm install --workspace=client",
    "setup:server": "npm install --workspace=server",
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "start": "node server/dist/index.js",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "validate": "npm run lint && npm run test",
    "clean": "npm run reset && npm run setup",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.1",
    "rimraf": "^5.0.5"
  }
}
